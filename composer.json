{
    "name": "fastbolt/test-helpers",
    "type": "library",
    "description": "Some test helpers used in Fastbolt unit tests",
    "keywords": [
        "fastbolt",
        "phpunit",
        "unit-tests"
    ],
    "homepage": "https://github.com/fastbolt/test-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Hirtzbruch",
            "email": "dhh@fastbolt.com",
            "homepage": "https://github.com/dhirtzbruch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "phpunit/phpunit": "^9.5"
    },
    "require-dev": {
        "fig-r/psr2r-sniffer": "^1.3",
        "phpmd/phpmd": "^2.11",
        "phpstan/phpstan": "^1.4",
        "psalm/plugin-phpunit": "^0.16.1",
        "slevomat/coding-standard": "^7.0",
        "spryker/code-sniffer": "^0.17.4",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.22"
    },
    "autoload": {
        "psr-4": {
            "Fastbolt\\TestHelpers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fastbolt\\TestHelpers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "prefer-stable": true
}
